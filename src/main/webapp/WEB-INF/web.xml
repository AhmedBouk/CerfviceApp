<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >


<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!--definition des servelets-->
  <servlet>
    <servlet-name>home</servlet-name>
    <servlet-class>com.onlinebank.Servlet.ServletAccueil</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletRegister</servlet-name>
    <servlet-class>com.onlinebank.Servlet.ServletRegister</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletLogin</servlet-name>
    <servlet-class>com.onlinebank.Servlet.ServletLogin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletProposition</servlet-name>
    <servlet-class>com.onlinebank.Servlet.ServletProposition</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletDeconnexion</servlet-name>
    <servlet-class>com.onlinebank.Servlet.ServletDeconnexion</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletDashboard</servlet-name>
    <servlet-class>com.onlinebank.Servlet.ServletDashboard</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletConseiller</servlet-name>
    <servlet-class>com.onlinebank.Servlet.ServletConseiller</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletAjoutProduit</servlet-name>
    <servlet-class>com.onlinebank.Servlet.ServletAjoutProduit</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletInterface</servlet-name>
    <servlet-class>com.onlinebank.Servlet.ServletInterface</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletUpdateConseiller</servlet-name>
    <servlet-class>com.onlinebank.Servlet.ServletUpdateConseiller</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ServletProduct</servlet-name>
    <servlet-class>com.onlinebank.Servlet.ServletProduct</servlet-class>
  </servlet>
  <!--mapping-->
  <servlet-mapping>
    <servlet-name>home</servlet-name>
    <url-pattern>/accueil</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletRegister</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletLogin</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletDeconnexion</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletProposition</servlet-name>
    <url-pattern>/produits</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletDashboard</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletConseiller</servlet-name>
    <url-pattern>/dashboardconseiller</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletAjoutProduit</servlet-name>
    <url-pattern>/ajout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletInterface</servlet-name>
    <url-pattern>/interface</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ServletUpdateConseiller</servlet-name>
    <url-pattern>/updateconseiller</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ServletProduct</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>login</welcome-file>
  </welcome-file-list>
</web-app>